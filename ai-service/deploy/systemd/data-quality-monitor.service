[Unit]
Description=RingRift Data Quality Monitor for Prometheus
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/ringrift/ai-service
Environment=PYTHONPATH=/root/ringrift/ai-service
EnvironmentFile=-/etc/ringrift/node.conf
ExecStart=/bin/bash -lc 'PY="/root/ringrift/ai-service/venv/bin/python"; if [ ! -x "$PY" ]; then PY="/usr/bin/python3"; fi; exec "$PY" "/root/ringrift/ai-service/scripts/data_quality_monitor.py" --port 9093'
Restart=always
RestartSec=10
StandardOutput=append:/var/log/ringrift/data_quality_monitor.log
StandardError=append:/var/log/ringrift/data_quality_monitor.log

# Resource limits
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
